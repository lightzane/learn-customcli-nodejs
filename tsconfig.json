{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // for development, but prod will use 'es6', see package.json > scripts > build
    "outDir": "./bin",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}